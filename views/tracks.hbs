<div class="container mt-3">
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Listen</th>
      </tr>
    </thead>
    <tbody>

      {{#each tracks}}

      <tr>
        <td>
          {{this.track_number}}. {{this.name}}
        </td>
        <td class="d-flex justify-content-end">
          <audio src="{{this.preview_url}}" controls></audio>
        </td>
      </tr>

      {{/each}}

    </tbody>
  </table>
</div>